rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - allow users to read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Orders - customers, vendors, and drivers can access their orders
    match /orders/{orderId} {
      allow read, write: if request.auth != null && 
        (resource.data.customer_id == request.auth.uid ||
         resource.data.vendor_id == request.auth.uid ||
         resource.data.driver_id == request.auth.uid);
    }
    
    // Services - anyone can read active services
    match /services/{serviceId} {
      allow read: if resource.data.status == 'active';
      allow write: if request.auth != null && 
        resource.data.vendor_id == request.auth.uid;
    }
    
    // Vendors - anyone can read active vendors
    match /vendors/{vendorId} {
      allow read: if resource.data.status == 'active';
      allow write: if request.auth != null && 
        request.auth.uid == vendorId;
    }
    
    // Drivers - anyone can read active drivers
    match /drivers/{driverId} {
      allow read: if resource.data.status == 'active';
      allow write: if request.auth != null && 
        request.auth.uid == driverId;
    }
    
    // Driver locations - anyone can read for tracking
    match /driver_locations/{driverId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.uid == driverId;
    }
    
    // Notifications - users can read their own
    match /notifications/{notificationId} {
      allow read, update: if request.auth != null && 
        resource.data.user_id == request.auth.uid;
    }
    
    // Messages - users can read messages they're part of
    match /messages/{messageId} {
      allow read, create, update: if request.auth != null && 
        (resource.data.sender_id == request.auth.uid ||
         resource.data.receiver_id == request.auth.uid);
    }
    
    // Payments - users can read their own payments
    match /payments/{paymentId} {
      allow read: if request.auth != null && 
        (resource.data.customer_id == request.auth.uid ||
         resource.data.vendor_id == request.auth.uid);
      allow create: if request.auth != null && 
        request.auth.uid == resource.data.customer_id;
    }
    
    // Ratings - anyone can read, users can create their own
    match /ratings/{ratingId} {
      allow read: if true;
      allow create, update: if request.auth != null && 
        request.auth.uid == resource.data.customer_id;
    }
    
    // Favorites - users can manage their own
    match /favorites/{favoriteId} {
      allow read, create, delete: if request.auth != null && 
        resource.data.user_id == request.auth.uid;
    }
    
    // Categories - anyone can read active categories
    match /categories/{categoryId} {
      allow read: if resource.data.status == 'active';
    }
    
    // App settings - anyone can read
    match /app_settings/{settingId} {
      allow read: if true;
    }
  }
}