# Server Configuration
PORT=8000
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Firebase Configuration
FIREBASE_PROJECT_ID=classyapp-unified-backend
FIREBASE_STORAGE_BUCKET=classyapp-unified-backend.appspot.com
FIREBASE_DATABASE_URL=https://classyapp-unified-backend.firebaseio.com

# Firebase Service Account (JSON string or path to file)
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"classyapp-unified-backend",...}

# Alternative: Individual Firebase credentials
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your_service_account@classyapp-unified-backend.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id

# Twilio Configuration (for SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
